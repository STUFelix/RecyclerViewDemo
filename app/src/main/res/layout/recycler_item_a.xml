<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_record_course_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:text="腾讯小学三年一班数学课"
        android:textColor="#DE03101B"
        android:textSize="18dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_teaching_time"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:text="授课时间：2020年2月13日 07:45"
            android:textColor="#8503101B"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/tv_teaching_duration"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:text="|  时长：40分钟"
            android:textColor="#8503101B"
            android:textSize="12dp"
            />
    </LinearLayout>
</LinearLayout>