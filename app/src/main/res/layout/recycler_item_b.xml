<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:padding="12dp"
    >
        <ImageView
            android:id="@+id/iv_watch_playback"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:background="@drawable/icon_record_course_details_playback" />
        <TextView
            android:id="@+id/tv_watch_playback"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="查看回放"
            android:textSize="16dp"
            android:textColor="#2196F3"
            android:layout_marginLeft="3dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/iv_watch_share"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_marginLeft="24dp"
            android:drawableLeft="@drawable/icon_record_course_details_share" />
        <TextView
            android:id="@+id/tv_watch_share"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="分享回放"
            android:textSize="16dp"
            android:textColor="#2196F3"
            android:layout_marginLeft="3dp"
            android:clickable="true"/>
</LinearLayout>